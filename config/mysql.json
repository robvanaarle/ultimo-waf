{
  "name": "mysql",
  "custom-token-types": {
    "char": ["(", ")", ",", "."],
    "data-manipulation-statement": ["select", "update", "delete", "insert", "drop", "replace", "case"],
    "clause": ["from", "where", "group", "order", "having"],
    "flow-control-statement": ["case", "if", "iterate", "leave", "loop", "repeat", "return", "while"],
    "function": ["concat", "concat_ws", "ascii", "hex", "unhex", "sleep", "md5", "benchmark"],
    "logical-binary-operator": ["and", "or", "xor", "||", "&&"],
    "logical-unary-operator": ["not", "!"],
    "other-operator": ["~", ":=", "&", "|", "^", "/", "<<", "-", "+", ">>", "*", "like", "regexp", "not_regexp", "rlike", "sounds_like"],
    "comparison-operator": ["<=>", ">=", ">", "<=", "<", "%", "!=", "<>", "="],
    "column-modifier": ["binary"],
    "value": ["true", "false", "null"],
    "char-semicolon": [";"],
    "operator-union": ["union"]
  },
  "aliases": {
    "%_%": "%comment%|%executed-comment-start%|%conditional-comment-start%|%comment-end%|%whitespace%",
    "%operand%": "%value%|%identifier%|%quoted_identifier%|%string%|%number%|%hexadecimal%|%bit-field%|%system-variable%|%user-defined-variable%",
    "%operator%": "%function%|%logical-binary-operator%|%logical-unary-operator%|%other-operator%|%comparison-operator%"
  },
  "threshold-score": 1,
  "rules": [
    {
      "message": "Three successive identifiers",
      "pattern": "/%identifier% %whitespace%* %identifier% %whitespace%* %identifier%/",
      "score": -20,
      "explode": "match-all",
      "quoted": "match-all"
    },
    {
      "message": "Operator followed by operand",
      "pattern": "/%operator% (%_%|%char-parenthesis-left%)* %operand%/",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    },
    {
      "message": "Second query after closing current query",
      "pattern": "/%operand% (%_%|%char-parenthesis-right%)* %char-semicolon% %_% %data-manipulation-statement% /",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    },
    {
      "message": "Union after closing current query",
      "pattern": "/%operand% (%_%|%char-parenthesis-right%)* %operator-union% /",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    }
    
  ],
  "-debug-disabled-rules": [
  ]
}