{
  "name": "mysql",
  "custom-token-types": {
    "char": [",", "."],
    "data-manipulation-statement": ["select", "update", "delete", "insert", "drop", "replace", "case"],
    "clause": ["from", "where", "group", "order", "having", "by", "against"],
    "flow-control-statement": ["case", "if", "iterate", "leave", "loop", "repeat", "return", "while"],
    "function": ["concat", "concat_ws", "ascii", "hex", "unhex", "sleep", "md5", "benchmark", "substring", "mid", "substr"],
    "logical-binary-operator": ["and", "or", "xor", "||", "&&"],
    "logical-unary-operator": ["not", "!"],
    "other-operator": ["~", ":=", "&", "|", "^", "/", "<<", "-", "+", ">>", "*", "like", "regexp", "not_regexp", "rlike", "sounds_like", "binary"],
    "comparison-operator": ["<=>", ">=", ">", "<=", "<", "%", "!=", "<>", "="],
    "column-modifier": ["in", "boolean", "mode"],
    "value": ["true", "false", "null"],
    "char-semicolon": [";"],
    "char-parenthesis-left": ["("],
    "char-parenthesis-right": [")"],
    "operator-union": ["union"]
  },
  "aliases": {
    "%_%": "%comment%|%executed-comment-start%|%conditional-comment-start%|%comment-end%|%whitespace%",
    "%operand%": "%value%|%identifier%|%quoted_identifier%|%string%|%number%|%hexadecimal%|%bit-field%|%system-variable%|%user-defined-variable%",
    "%operator%": "%function%|%logical-binary-operator%|%logical-unary-operator%|%other-operator%|%comparison-operator%|%clause%",
    "%char-parenthesis%": "%char-parenthesis-right%|%char-parenthesis-left%"
  },
  "threshold-score": 1,
  "rules": [
    {
      "message": "Three successive identifiers",
      "pattern": "/%identifier% %whitespace%* %identifier% %whitespace%* %identifier%/",
      "score": -20,
      "explode": "match-all",
      "quoted": "match-all"
    },
    {
      "message": "Operator followed by operand",
      "pattern": "/%operator% (%_%|%char-parenthesis-left%|%column-modifier%)* %operand%/",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    },
    {
      "message": "Closure of vurnable query followed by a new query",
      "pattern": "/^%operand% (%_%|%char-parenthesis-right%|%column-modifier%)* %char-semicolon% (%_%|%char-parenthesis-left%)* %data-manipulation-statement% /",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    },
    {
      "message": "Closure of vurnable variable followed by a union",
      "pattern": "/^%operand% (%_%|%char-parenthesis-right%|%column-modifier%)* %operator-union% /",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    }
    
  ],
  "-debug-disabled-rules": [
    {
      "message": "Closure of vurnable variable followed by operator and operand [TODO: operand may be preceeded by -, + , ~, !, not or binary, which must be checked if this rule will replace 'Operator followed by operand']",
      "pattern": "/^%operand% (%_%|%char-parenthesis%|%column-modifier%)* %operator% (%_%|%char-parenthesis-left%)* %operand%/",
      "explode": "match-any",
      "quoted": "match-any",
      "score": 4
    }
  ]
}